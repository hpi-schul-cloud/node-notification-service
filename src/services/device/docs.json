{
  "description": "Device registration",
  "definitions": {
    "devices": {
      "type": "object",
      "required": [
        "user_token", "device_token", "type", "service", "OS", "name"
      ],
      "properties": {
        "token": {
          "type": "string",
          "description": "Application SSO Token"
        },
        "device_token": {
          "type": "string",
          "description": "Device Token"
        },
        "type": {
          "type": "string",
          "description": "either 'mobile' or 'desktop'"
        },
        "service": {
          "type": "string",
          "description": "either 'firebase' or 'apn'"
        },
        "OS": {
          "type": "string",
          "description": "e.g. 'android7'"
        },
        "name": {
          "type": "string",
          "description": "Device name"
        }
      },
      "example": {
        "service": "firebase",
        "type": "mobile",
        "name": "test2",
        "token": "student1_1",
        "device_token": "anderestoken",
        "OS": "android7"
      }
    }
  },
   "create": {
     "summary": "Register a new Device",
     "description": "TODO",
     "responses": {
       "200": {
         "description": "Device was registered"
       },
       "401": {
         "description": "Authentication fails"
       },
       "403": {
         "description": "Device deletion failed or device not existing"
       },
       "500": {
         "description": "internal error try again later."
       }
     }
   },
  "remove": {
    "summary": "Remove a new Device",
    "description": "TODO",
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "description": "token of the device to delete",
        "required": true,
        "type": "string"
      },
      {
        "name": "token",
        "in": "query",
        "description": "Application SSO Token",
        "required": true,
        "type": "string"
      }
    ],
    "responses": {
      "200": {
        "description": "Device was removed"
      },
      "400": {
        "description": "The Provided payload is either incomplete or one or more values are invalid"
      },
      "500": {
        "description": "internal error try again later."
      }
    }
  }
}
