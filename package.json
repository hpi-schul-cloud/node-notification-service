{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "A notification service for mails and push notifications build with Typescript on top of Node and Express.js.",
  "main": "src/app.ts",
  "scripts": {
    "start": "nodemon --debug=5859",
    "lint": "tslint -p tsconfig.json --fix",
    "server": "ts-node -r tsconfig-paths/register src/app.ts",
    "dev": "npm run lint && npm run server",
    "debug": "NOTIFICATION_PORT=3031 node --inspect=5859 --require ts-node/register --require tsconfig-paths/register src/app.ts",
    "build": "tsc",
    "production": "NODE_ENV=production node -r tsconfig-paths/register build/app.js",
    "test": "mocha -t 30000 -r tsconfig-paths/register -r ts-node/register test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schul-cloud/node-notification-service.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schul-cloud/node-notification-service/issues"
  },
  "homepage": "https://github.com/schul-cloud/node-notification-service",
  "dependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/morgan": "^1.7.35",
    "app-root-path": "^2.1.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "chai-as-promised": "^7.1.1",
    "express": "^4.16.3",
    "firebase-admin": "^5.12.1",
    "js-yaml": "^3.12.0",
    "mongoose": "^5.1.6",
    "morgan": "^1.9.1",
    "morgan-json": "^1.1.0",
    "mustache": "^2.3.0",
    "nodemailer": "^4.6.5",
    "swagger-ui-express": "^3.0.10",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-spies": "^1.0.0",
    "@types/chai-subset": "^1.3.1",
    "@types/express": "^4.11.1",
    "@types/js-yaml": "^3.11.2",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.0.18",
    "@types/mustache": "^0.8.31",
    "@types/nodemailer": "^4.6.0",
    "@types/swagger-ui-express": "^3.0.0",
    "chai": "^4.1.2",
    "chai-spies": "^1.0.0",
    "chai-subset": "^1.6.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.2",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
